#!/bin/bash

CUSTOM_BUILD_ROOT=`cd $(dirname $0); pwd`

BUILD_DIR=$1
VENDOR_DIR=$2
SRC_URL_BASE=$3
S3_BUCKET=$4
S3_BASE=$5

set -e

${CUSTOM_BUILD_ROOT}/scripts/zlib ${BUILD_DIR} ${VENDOR_DIR} ${SRC_URL_BASE} ${S3_BUCKET} ${S3_BASE}
${CUSTOM_BUILD_ROOT}/scripts/libpng ${BUILD_DIR} ${VENDOR_DIR} ${SRC_URL_BASE} ${S3_BUCKET} ${S3_BASE}
${CUSTOM_BUILD_ROOT}/scripts/tiff ${BUILD_DIR} ${VENDOR_DIR} ${SRC_URL_BASE} ${S3_BUCKET} ${S3_BASE}
${CUSTOM_BUILD_ROOT}/scripts/yasm ${BUILD_DIR} ${VENDOR_DIR} ${SRC_URL_BASE} ${S3_BUCKET} ${S3_BASE}
${CUSTOM_BUILD_ROOT}/scripts/libjpeg-turbo ${BUILD_DIR} ${VENDOR_DIR} ${SRC_URL_BASE} ${S3_BUCKET} ${S3_BASE}
${CUSTOM_BUILD_ROOT}/scripts/lcms2 ${BUILD_DIR} ${VENDOR_DIR} ${SRC_URL_BASE} ${S3_BUCKET} ${S3_BASE}
${CUSTOM_BUILD_ROOT}/scripts/gm ${BUILD_DIR} ${VENDOR_DIR} ${SRC_URL_BASE} ${S3_BUCKET} ${S3_BASE}

